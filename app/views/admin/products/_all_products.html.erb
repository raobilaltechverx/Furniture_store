<div class="dataTable_wrapper">
    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-vendors">
        <thead>
            <tr>
            <th style="display: none;"></th>
            
                <th><%= t 'admin.name'%></th>
                <th><%= t 'admin.price'%></th>
                <th><%= t 'admin.discounted price'%></th>
                <th><%= t 'admin.description'%></th>
                <th><%= t 'admin.Image'%></th>
                  <th><%= t 'admin.tool'%></th>
                </tr>
        </thead>
        <tbody>

        <% @admin_products.each do |product| %>

            <tr class="odd gradeX">
            <td style="display: none;"></td>
                <td><%= product.name %></td>
                <td><%= product.price %></td>
                <td><%= product.discounted_pric %></td>
                <td><%= product.description %></td>
                <td><%= image_tag product.avatar.url(:thumbnail) %></td>
                <td>
                   <span>
                     <%= link_to '', edit_admin_product_path(product),class: "edit fa fa-edit icon_link with-tip no-text", title: "edit" %> 
                      </span>
                    <span>
                        <%= link_to '',  admin_product_path(product),  method: :delete, data: { confirm: 'Are you sure?' } ,class: "fa fa-trash icon_link with-tip no-text"%>
                     </span>
                </td> 
            </tr> 
                <%end%>                                                                      
        </tbody>
    </table>
</div>
<!-- /.table-responsive -->
<script>
    $(document).ready(function() {
        $('#dataTables-vendors').DataTable({
                responsive: true,
                pageLength: 50,
                autoWidth: false

        });
    });
</script>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                New Product Form
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <%= form_for(@admin_product) do |f| %>
                            
                            <div class="form-group">
                               <%=f.label :name%>
                                <%=f.text_field :name ,class: 'form-control admin_product_name', placeholder: 'Enter name' , required: 'true'%>
                            </div>
                            <div class="form-group">
                               <%=f.label :price%>
                                <%=f.number_field :price ,class: 'form-control', placeholder: 'Enter Price' , required: 'true'%>
                            </div>
                            <div class="form-group">
                               <%=f.label :discounted_price%>
                                <%=f.number_field :discounted_pric, class: 'form-control admin_product_name', placeholder: 'Discounted Price' %>
                            </div>
                            <div class="form-group">
                               <%=f.label :description%>
                                <%=f.text_field :description ,class: 'form-control', placeholder: 'deccribe' , required: 'true'%>
                            </div>
                               <div class="form-group">
                              <%= f.label :categories %>
                                <%= f.select :category_ids, options_from_collection_for_select(Admin::Category.all, :id,:name,f.object.category_ids),{}, :multiple => true ,:class=> 'select form-control',:id => 'admin_categories' %>
                            </div>
                              <div class="form-group">
                               <%=f.label :Image%>
                                <%=f.file_field :avatar ,class: 'form-control'%>
                            </div>
                            <br>
                            <div><p><%= f.submit 'Submit', class: "btn btn-default" %>
                            
                            <button type="reset" class="btn btn-default">Reset Button</button></p></div>
                        <%end%>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                    
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

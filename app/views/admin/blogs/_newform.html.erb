<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Create New Blog
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <%= form_for(@admin_blog) do |f| %>
                            
                            <div class="form-group">
                               <%=f.label :title%>
                                <%=f.text_field :title ,class: 'form-control admin_cms_page ', placeholder: 'Enter title' , required: 'true'%>
                            </div>
                           
                            <div class="form-group">
                               <%=f.label :description%>
                                <%=f.cktext_area :description, class: 'form-control', placeholder: 'deccribe' , required: 'true' %>
                            </div>

                               <div class="form-group">
                               <%=f.label :Image%>
                                <%=f.file_field :avatar ,class: 'form-control'%>
                            </div>                             
                            <br>

                            <div><p><%= f.submit 'Submit', class: "btn btn-default" %>
                            
                            <button type="reset" class="btn btn-default">Reset Button</button></p></div>
                        <%end%>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                    
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

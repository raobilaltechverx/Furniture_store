<div class="container bg" >
  <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="well well-sm">
         
          <%= form_for (@contact) do |f|  %>
          <fieldset>
            <legend class="text-center">Contact us</legend>
    
            <!-- Name input-->
            <div class="form-group">
              <label class="col-md-3 control-label" for="name">Name</label>
              <div class="col-md-9">
                 <%=f.text_field :name ,class: 'form-control', placeholder: 'Full Name' , required: 'true'%>
              </div>
            </div>
          </br>
          </br>
    
            <!-- Email input-->
            <div class="form-group">
              <label class="col-md-3 control-label" for="email">Your E-mail</label>
              <div class="col-md-9">
               <%=f.email_field :email ,class: 'form-control', placeholder: 'Email Address' , required: 'true'%>
              </div>
            </div>
    </br>
          </br>
            <!-- Message body -->
            <div class="form-group">
              <label class="col-md-3 control-label" for="message">Your message</label>
              <div class="col-md-9">
                <%=f.text_area :description ,class: 'form-control',rows: 10, placeholder: 'Please enter your message' , required: 'true'%>
              </div>
            </div>
    
            <!-- Form actions -->
            <div class="form-group">
              </br>
              <div class="col-md-12 text-left">
              </br>
                <%= f.submit 'Submit', class: "btn btn-default" %>
              </div>
            </div>
          </fieldset>
          <%end%>
       
        </div>
      </div>
  </div>
</div>

<style type="text/css">body {padding-top:20px;}.form-control{text-align: left;}
.bg{background-color: #f0f0f0;}
</style>


